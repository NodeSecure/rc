{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": true,
    "target": "ESNext",
    "outDir": "dist",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": false,
    "skipDefaultLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "rootDir": "./src",
    "types": ["node", "mocha"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
