{
  "compilerOptions": {
    "declaration": true,
    "strictNullChecks": true,
    "target": "ES2020",
    "outDir": "dist",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "rootDir": "./src",
    "types": ["node", "mocha"]
  },
  "include": ["src", "src/schema/**/*.json"],
  "exclude": ["node_modules", "dist"]
}
